.form1
	background url(../images/bform1.jpg) no-repeat top center
	height 880px

	.container
		height 100%
	
.form1__container
	display flex
	height 100%

.form1
	.base-form__form
		max-width 375px

.base-form
	padding-y(65px)
	border-radius 6px
	background-color white
	box-shadow 0.418px 3.978px 46px 0px rgba(45, 45, 45, 0.04)
	max-width 881px
	width 100%
	margin auto
	display flex

	&__content
		margin auto
		max-width 570px
		width 100%

	&__title
		font 27px 'GPro-R'
		line-height 1.5
		text-align center

		span 
			font 27px 'GPro-B'

	&__form
		margin-top 45px
		width 100%
		margin-x(auto)

		.base-btn
			width 100%

			span
				width 100%

	&__sign
		margin-top 30px
		text-align center
		font 12px 'GPro-R'
		color #b4b4b4

.base-input
	border 1px solid rgba(#b4b4b4, 0.3)
	border-radius 6px 
	width 100%
	height 52px
	position relative
	padding-left 20px
	font 16px 'GPro-R'
	color #ababab
	margin-bottom 20px

	&:before
		content: ''
		position: absolute
		top 50%
		left 0
		transform translate(0, -50%)
		width 12px
		height 12px
