.form1
	background url(../images/bform1.jpg) no-repeat top center
	height 880px

	.container
		height 100%

.form1__container
	display flex
	height 100%

.form1
	.base-form__form
		max-width 375px

.base-form
	padding-y(65px)
	border-radius 6px
	background-color white
	box-shadow 0.418px 3.978px 46px 0px rgba(45, 45, 45, 0.04)
	max-width 881px
	width 100%
	margin auto
	display flex

	&__content
		padding-x(10px)
		margin auto
		max-width 570px
		width 100%

	&__title
		font 24px 'GPro-R'
		line-height 1.5
		text-align center

		span
			font 24px 'GPro-B'

	&__form
		padding-x(10px)
		margin-top 45px
		width 100%
		margin-x(auto)

		.base-btn
			width 100%

			span
				width 100%

	&__sign
		margin-top 45px
		text-align center
		font 12px 'GPro-R'
		color #b4b4b4
		line-height: 1.5

.base-input
	border 1px solid rgba(#b4b4b4, 0.3)
	border-radius 6px
	width 100%
	height 52px
	position relative
	padding-left 54px
	font 16px 'GPro-R'
	color #ababab

	&.ni
		padding-left 20px

.base-input-wrapper
	position relative
	margin-bottom 20px

	&:before
		content: ''
		position: absolute
		top 50%
		left 27px
		transform translate(0, -50%)
		width 12px
		height 12px
		z-index 10

.base-input-wrapper.phone:before
	background: url(../images/phone.png) no-repeat

.base-input-wrapper.name:before
	background: url(../images/name.png) no-repeat

+below(756px)
	.base-form
		&__title
			font-size 20px

			span
				font-size 20px
