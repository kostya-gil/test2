.actions
	background url(../images/baction.jpg) no-repeat top center
	height 796px

	.container
		height 100%

.actions
	&__container
		height 100%
		position relative

	&__place
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		padding 75px 0 90px 0
		max-width 795px
		width 100%
		background: white
		border-radius 6px

	&__title
		font 35px 'GPro-B'
		line-height: 1.4

		span
			color #f1ab08

	&__content
		text-align: center
		max-width 600px
		width: 100%
		margin-x(auto)

	&__text
		margin-top 40px
		font 18px 'GPro-R'
		line-height 1.5
		color: #646464

	&__btn
		margin-top 45px
		margin-x(auto)