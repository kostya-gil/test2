.examples
	background: url(../images/bexam.jpg) no-repeat top center
	height 880px
	padding-top 100px
	padding-bottom 115px

	&__slider
		margin-top 50px

.ea-l
.ea-r
	margin-top 25px
	position absolute
	top 50%
	transform translate(0, -50%)
	width: 60px
	height 60px
	border-radius: 50%
	background rgba(194, 194, 194, .7)
	transition all .3s ease

	&:before
		content ''
		width 15px
		height 27px
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

	&:hover
		background-image linear-gradient(135deg, #ef9d07 2%, #f9cf07 100%)

.ea-l:before
	background url(../images/ea-l.png) no-repeat

.ea-r:before
	background url(../images/ea-r.png) no-repeat

.ea-l
	left -100px

.ea-r
	right -100px

.example-item
	background #ffffff
	display flex
	justify-content space-between
	border-radius 6px
	box-shadow 0.418px 3.978px 46px rgba(0,0,0,0.05)

	&__img
		max-width 585px
		width 100%

	&__content
		padding 0 20px 55px 45px
		width 100%
		text-align left

	&__title
		font 27px 'GPro-B'

.example-list-work
	margin-top 8px

	li
		font 14px 'GPro-R'
		color #656565
		line-height 1.5

.example-s-title
	font 18px 'GPro-B'

.example-s-item
	margin-top 15px

.example-s-text
	position: relative
	left 5px
	font 18px 'GPro-R'

+below(874px)
	.examples
		text-align center
		height auto
		background: #fdfbfb

	.example-item
		padding-x(15px)
		padding-top 25px
		flex-direction: column
		justify-content: center
		align-items: center
		position: relative
		text-align center

		&__img
			img
				margin-x(auto)

		&__content
			padding-top 30px
			padding-x(15px)
			text-align center
