.map
	padding-top: 60px
	padding-bottom 60px

	&__container
		display: flex
		justify-content: space-between
		align-items: flex-end

.map-info
	max-width 445px
	width: 100%

	&__content
		margin-top 45px

.map-item
	padding-left: 25px
	position: relative
	margin-bottom: 30px

	&__img
		position absolute
		top 0
		left 0

	&__title
		font 18px 'GPro-M'

	&__text
		display block
		margin-top 10px
		font 16px 'GPro-R'
		color: #646464

	&__social
		margin-top: 5px

		a
			font 16px 'GPro-R'
			color: #646464
			display block
			margin-x(5px)

.map-img
	max-width 645px
	width: 100%

+below(790px)
	.map__container
		flex-direction: column
		justify-content: center
		align-items: center
