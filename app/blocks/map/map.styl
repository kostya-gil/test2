.map
	padding-bottom 90px

	&__container
		display: flex
		justify-content: space-between
		align-items: flex-end

.map-info
	max-width 445px
	width: 100%

	&__content
		margin-top 45px

.map-item
	padding-left: 25px
	position: relative
	margin-bottom: 30px

	&__img
		position absolute
		top 0
		left 0

	&__title
		font 18px 'GPro-M'

	&__text
		margin-top: 10px
		font 16px 'GPro-R'
		color: #646464

.map-img
	max-width 645px
	width: 100%
	height 385px
