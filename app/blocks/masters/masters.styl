.masters
	padding-y(100px)
	position relative

	&__slider
		margin-top 50px

.ma-l
.ma-r
	margin-top 25px
	width 15px
	height 27px
	position absolute
	top 50%
	transform translate(0, -50%)

.ma-l
	left 0
	background url(../images/fa-l.png) no-repeat

	&:hover
		background url(../images/fa-lh.png) no-repeat

.ma-r
	right 0
	background url(../images/fa-r.png) no-repeat

	&:hover
		background url(../images/fa-rh.png) no-repeat

.master-item
	background #fbfbfb
	display flex
	justify-content space-between

	&__img
		max-width 450px
		width 100%
		flex-shrink: 0

	&__content
		text-align left
		padding 35px 50px 55px 45px
		width 100%

	&__title
		font 27px 'GPro-B'
		color #f1ab08

	&__sub-title
		margin-top 10px
		font 16px 'GPro-R'

	&__skills
		margin-top 25px

	&__sign
		margin-top 10px
		font 18px 'GPro-M'

.master-skill
	margin-bottom 20px

	&__title
		font 18px 'GPro-B'

	&__text
		margin-top: 10px
		font 16px 'GPro-R'
		color: #646464

+below(874px)
	.master-item
		padding-x(15px)
		padding-top 25px
		flex-direction: column
		justify-content: center
		align-items: center
		position: relative
		text-align center

		&__content
			text-align center
