.header
	padding-top 35px
	padding-bottom 40px
	position: fixed
	top 0
	left 0
	right 0
	background white
	z-index 100
	box-shadow 0px 0px 27px 0px rgba(0, 0, 0, 0.03)

	&__container
		display flex
		justify-content space-between
		align-items center

	&__logo
		width 190px

.header-info
	width: 200px

	&__phone
		position: relative
		padding-left: 27px
		font 18px 'GPro-M'
		color #353535

		&:before
			content ''
			position: absolute
			top: 3px
			left: 0
			width: 12px
			height: 12px
			background: url(../images/phone.png) no-repeat

	&__time
		margin-top 7px
		font 14px 'GPro-R'
		color #aaaaaa

.nav 
	max-width 730px
	width: 100%
	display flex
	justify-content space-between
	align-items center

	&__link
		padding-x(5px)
		font 16px 'GPro-M'
		color #868686

		&:hover
		&.active
			color black
