.feedback
	padding-y(100px)
	position relative

	&__slider
		margin-top 50px

.fa-l
.fa-r
	margin-top 25px
	width 15px
	height 27px
	position absolute
	top 50%
	transform translate(0, -50%)
	z-index 100

.fa-l
	left 10px
	background url(../images/fa-l.png) no-repeat

	&:hover
		background url(../images/fa-lh.png) no-repeat

.fa-r
	right 10px
	background url(../images/fa-r.png) no-repeat

	&:hover
		background url(../images/fa-rh.png) no-repeat


.review-item
	background #fbfbfb
	display flex
	justify-content space-between

	&__img
		max-width 450px
		width 100%
		flex-shrink: 0

	&__content
		padding 55px 0 55px 50px
		width 100%
		text-align left

	&__block
		max-width 605px

	&__title
		font 27px 'GPro-B'

	&__text
		margin-top 25px
		font 16px 'GPro-R'
		color #535353
		line-height 1.4

		span
			margin-top 7px
			display block
			font 17px 'GPro-B'

.feedback-form
	position relative
	background #fbfbfb
	min-height 635px

	&__img
		position absolute
		right 50vw
		top 0
		max-width 930px
		width: 100%
		height 635px
		background url(../images/fimg.jpg) no-repeat top center


	&__content
		max-width 530px
		position absolute
		top 0
		right 0
		padding-y(90px)

	&__text
		margin-top 30px

	&__btn-group
		margin-top 35px
		display flex
		justify-content space-between

+below(1134px)
	.feedback-form
		min-height: auto

	.feedback-form__img
		display: none

	.feedback-form__content
		position static
		margin-x(auto)

+below(790px)
	.review-item
		padding-x(15px)
		padding-top 25px
		flex-direction: column
		justify-content: center
		align-items: center
		position: relative
		text-align center

		&__content
			padding 20px 15px
			text-align center

+below(560px)
	.feedback-form__btn-group
		flex-direction: column
		justify-content: center
		align-items: center

		.base-btn
			margin-y(10px)
