.service
	padding-y(120px)

	&__title
		margin-top 18px
		font 18px 'GPro-R'
		color #908f8f

	&__content
		margin-top 75px
		display flex
		justify-content space-between
		align-items flex-start

.service-item
	max-width 520px
	width 100%
	background #fbfbfb

	&__info
		padding 47px
		padding-top 50px
		border-top-left-radius 6px
		border-top-right-radius 6px
		background-color #ef9d07
		background-image linear-gradient(61deg, #ef9d07 2%, #f9cf07 100%)
		position relative

	&__img
		position absolute
		right -15%
		top -45%

	&__content
		margin-y(35px)
		margin-x(auto)
		max-width 445px
		width 100%

.service-info
	color white

	&__title
		font 31px 'GPro-B'
		line-height 1.3

	&__text
		margin-top 20px
		font 18px 'GPro-R'

.service-content
	&__title
		font 25px 'GPro-B'
		margin-bottom 10px

	&__item
		margin-top 25px

	
.service-content-item
	&__info
		display flex
		justify-content space-between
		align-items flex-start

	&__title
		font 19px 'GPro-R'

	&__price
		font 19px 'GPro-Black'
		color #f1a208

	&__text
		max-width 330px
		margin-top 18px
		font 14px 'GPro-R'
		color #808080

.service-btn
	margin-top 50px
	max-width 340px
	width 100%

	span
		width 100%
		font-size 14px