.video
	padding-top 105px
	padding-bottom 90px

	&__content
		margin-top 50px
		display flex
		justify-content space-between

.video-item
	max-width 525px
	width 100%

	&__video
		margin-y(25px)
		border-radius: 6px
		position relative

	&__play-btn
		position: absolute
		top 50%
		left 50%
		transform: translate(-50%, -50%)
		background: url(../images/plbtn.png) no-repeat
		width: 115px
		height: 117px

	&__title-text
		font 25px 'GPro-B'

	&__text
		font 16px 'GPro-R'

	&__text.name
		margin-top 14px

	&__text.desc
		margin-top: 17px
		color #7c7c7c
