					.modal-sl
						.slider-item
							.modal-img
								img(src='assets/images/portfolio/4.1.png', alt='')
						.slider-item
							.modal-img
								img(src='assets/images/portfolio/4.2.png', alt='')
						.slider-item
							.modal-img
								img(src='assets/images/portfolio/4.3.png', alt='')
				.modal-features
					.modal-feature
						.mf-l Адрес
						.mf-r с Ленинское
