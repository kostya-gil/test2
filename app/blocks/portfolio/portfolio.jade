mixin portfolio()
	.portfolio-content
		.portfolio-content-container
			h1.p-title Выполненные 
				span заказы

	+b.portfolio&attributes(attributes)
		.container
			.portfolio-container
				+b.p-item
					.p-item-logo
					.p-item-img
						img(src="assets/images/face.png", alt="")
					.p-item-decor

					a.p-item-cover(href="javascript:void(0)" data-remodal-target="modal")
						.p-item-content
							span.p-item-title Пример заголовка
							span.p-item-plus +

				+b.p-item
					.p-item-logo
					.p-item-img
