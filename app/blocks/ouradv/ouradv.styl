.ouradv
	background: #fbfbfb
	padding 85px 0 95px 0

	&__content
		margin-top 80px
		display flex
		justify-content space-between
		align-items center

.ouradv-item
	max-width 360px
	width 100%
	padding 40px 35px 40px 35px
	border-radius 6px
	background: white
	box-shadow: 0.418px 3.978px 13px 0px rgba(45, 45, 45, 0.04)
	position: relative
	height 350px

	&__title
		font 25px 'GPro-B'

	&__img
		position: absolute
		top -25px
		right 0
		z-index 10

	&__list
		margin-top 25px

	&__list-item
		margin-bottom 15px
		font 16px 'GPro-R'
		position relative
		color #5c5c5c
		padding-left 16px

		&:before
			content ''
			border-radius: 50%
			background: #f4b308
			size(6px)
			position: absolute
			top 50%
			left 0
			transform: translate(0, -50%)

+below(1180px)
	.ouradv
		.container
			text-align center

	.ouradv__content
		flex-direction: column
		justify-content: center
		align-items: center

	.ouradv-item
		margin-bottom 20px
		text-align left

+below(450px)
	.ouradv
		padding-bottom 0px

	.ouradv-item__img
		display: none

	.ouradv-item
		height auto
