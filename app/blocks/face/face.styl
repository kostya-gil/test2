.face-wrapper
	background url(../images/face.png) no-repeat top center
	height 910px

.face-content
	padding-top 290px

.face
	&__content
		max-width 465px
		width 100%

	&__title
		font 48px 'GPro-Black'

	&__text
		margin-top 35px
		font 18px 'GPro-R'
		color #878686
		line-height 1.6

.face-advantages
	margin-top 150px
	display flex
	justify-content space-between
	align-items center

.face-advan
	width 250px

	&__img
		display block
		position: relative

	&__content
		position relative
		z-index 10
		width 100%
		border-radius: 6px
		box-shadow 0.418px 3.978px 8px rgba(45,45,45,0.02)
		background-color #ffffff
		text-align center
		height 121px
		padding 10px

	&__text
		padding-x(15px)
		position: absolute
		top 50%
		transform: translate(0, -50%)
		padding-top 2px
		font 18px 'GPro-M'

.face-advan-img-outer
	width: 94px
	height: 94px
	top 50%
	left 50%
	margin-left -47px
	margin-top -47px
	border-radius: 50%
	border: 1px solid #f1c429
	position absolute
	z-index 1

.face-advan-img-inner
	position absolute
	top 50%
	left 50%
	z-index 20
	margin-left: -34.5px
	margin-top -34.5px
	width 69px
	height 69px
	border-radius 35px
	box-shadow 0.07px 3.999px 5px rgba(244,178,0,0.28)
	background-image linear-gradient(-29deg, #f0a300 0%, #ffde00 100%)

	img
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

+below(1096px)
	.face-content
		padding-top 180px

	.face-advantages
		display inline-flex
		text-align center
		flex-wrap wrap
		justify-content center

	.face-advan
		margin-x(15px)
		margin-bottom 70px

+below(790px)
	.face__title
		font-size 38px

	.title
		font-size 27px

		&:before
			max-width 169px
			top 20px
			height 7px

+below(560px)
	.face
		height 1000px
		background-position: 50% 130%

		&__text
			margin-top 15px

	.face-content
		padding-top 150px

	.face-advantages
		margin-top 70px
		display block

		.face-advan
			margin-x(0)
			min-width 290px
			width 100%
			height 83px

			&__content
				height 100%

			&__text
				padding: 0
				padding-top 10px
				width 100%
				left 0
				font-size: 14px

	.face
		text-align: center

+below(450px)
	.face__title
		font-size: 27px

	.face__text
		font-size 16px

	.title
		&:before
			left -7px !important
