.principles
	background #fbfbfb
	padding-top 85px
	padding-bottom 95px

.principles-row:first-child
	margin-top 100px

.principles-row
	margin-top 80px
	display flex
	justify-content space-between
	align-items center

	.face-advan
		max-width 345px
		width 100%

	.face-advan__content
		height 185px
		padding-x(20px)

	.face-advan__text
		width 100%
		left 50%
		transform: translate(-50%, -50%)

+below(868px)
	.principles
		padding-bottom: 60px
		text-align center

	.principles-row
		flex-direction: column
		justify-content: center
		align-items: center

		.face-advan
			margin-x(0)
			min-width 290px
			width 100%
			height auto

			&__content
				padding-x(15px)
				height auto

			&__text
				position: static
				transform: translate(0, 0)
				top 0
				left 0
				padding: 0
				padding-top: 35px
				padding-bottom 10px
				width 100%
				font-size: 14px

		.face-advan:last-child
			margin-bottom 0
